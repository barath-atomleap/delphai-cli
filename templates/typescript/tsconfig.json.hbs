{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "esnext",
      "DOM",
      "ES5",
      "ES6",
      "DOM.Iterable"
    ],
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "resolveJsonModule": true
  }
}