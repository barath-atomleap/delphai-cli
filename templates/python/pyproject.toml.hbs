[tool.poetry]
name = "{{ project }}"
version = "0.1.0"
description = ""
authors = ["delphai <admin@delphai.com>"]

[tool.poetry.dependencies]
python = "^3.8"
delphai-utils = {extras = ["config"], version = "^0.2.0"}

[tool.poetry.dev-dependencies]
yapf = "^0.30.0"
pep8-naming = "^0.11.1"
flake8 = "^3.8.3"
poethepoet = "^0.8.0"
pytest = "^6.2.2"
pytest-sugar = "^0.9.4"
pytest-asyncio = "^0.14.0"
pytest-snapshot = "^0.5.0"


[tool.poe.tasks]
start = "python src/server.py"
test = "pytest"

[tool.pytest.ini_options]
addopts = "-p no:warnings"
filterwarnings = [
  "error"
]